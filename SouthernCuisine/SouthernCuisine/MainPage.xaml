<?xml version="1.0" encoding="utf-8" ?>
<TabbedPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:SouthernCuisine"
             x:Class="SouthernCuisine.MainPage">
    <NavigationPage Title="Next Meal">
        <x:Arguments>
            <local:CurrentMenuPage/>
        </x:Arguments>
    </NavigationPage>
    <NavigationPage Title="All Menus">
        <x:Arguments>
            <local:AllMenusPage/>
        </x:Arguments>
    </NavigationPage>
    <NavigationPage Title="Preferences">
        <x:Arguments>
            <local:PreferencesPage/>
        </x:Arguments>
    </NavigationPage>
</TabbedPage>
