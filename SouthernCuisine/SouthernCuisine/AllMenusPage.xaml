<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SouthernCuisine.AllMenusPage"
             Title="ChewSouthern: All the Menus">
    <ContentPage.Content>
        <StackLayout
                Orientation="Vertical">
            <StackLayout
                Orientation="Horizontal">
            <Button
                    x:Name="CafMenuButton"
                    Text="Cafeteria Menu"
                    Clicked="CafMenuButton_Clicked"
                    HorizontalOptions="FillAndExpand"
                    VerticalOptions="Start"/>
            <Button
                    x:Name="VMMenuButton"
                    Text="Village Market Menu"
                    Clicked="VMMenuButton_Clicked"
                    HorizontalOptions="FillAndExpand"
                    VerticalOptions="Start"/>
            </StackLayout>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
            
                <Button
                    x:Name="SundayButton"
                    Text="Su"
                    Clicked="SundayButton_Clicked"
                    HorizontalOptions="Fill"
                    VerticalOptions="Start"
                    Grid.Row="0"
                    Grid.Column="0"/>
                <Button
                    x:Name="MondayButton"
                    Text="Mo"
                    Clicked="MondayButton_Clicked"
                    HorizontalOptions="Fill"
                    VerticalOptions="Start"
                    Grid.Row="0"
                    Grid.Column="1"/>
                <Button
                    x:Name="TuesdayButton"
                    Text="Tu"
                    Clicked="TuesdayButton_Clicked"
                    HorizontalOptions="Fill"
                    VerticalOptions="Start"
                    Grid.Row="0"
                    Grid.Column="2"/>
                <Button
                    x:Name="WednesdayButton"
                    Text="We"
                    Clicked="WednesdayButton_Clicked"
                    HorizontalOptions="Fill"
                    VerticalOptions="Start"
                    Grid.Row="0"
                    Grid.Column="3"/>
                <Button
                    x:Name="ThursdayButton"
                    Text="Th"
                    Clicked="ThursdayButton_Clicked"
                    HorizontalOptions="Fill"
                    VerticalOptions="Start"
                    Grid.Row="0"
                    Grid.Column="4"/>
                <Button
                    x:Name="FridayButton"
                    Text="Fr"
                    Clicked="FridayButton_Clicked"
                    HorizontalOptions="Fill"
                    VerticalOptions="Start"
                    Grid.Row="0"
                    Grid.Column="5"/>
                <Button
                    x:Name="SaturdayButton"
                    Text="Sa"
                    Clicked="SaturdayButton_Clicked"
                    HorizontalOptions="Fill"
                    VerticalOptions="Start"
                    Grid.Row="0"
                    Grid.Column="6"/>
            </Grid>
            <ScrollView>
                <StackLayout>
                    <Label
                        x:Name="BreakfastLabel"
                        VerticalOptions="Start"
                        HorizontalOptions="Center"
                        Font="Bold, 20"
                        BackgroundColor="Transparent"/>
                    <Label
                        x:Name="BreakfastMenuLabel"
                        VerticalOptions="Start"
                        HorizontalOptions="Start"
                        Margin="10, 0, 10, 0"
                        Font="20"
                        BackgroundColor="Transparent"/>
                    <Label
                        x:Name="LunchLabel"
                        VerticalOptions="Start"
                        HorizontalOptions="Center"
                        Font="Bold, 20"
                        BackgroundColor="Transparent"/>
                    <Label
                        x:Name="LunchMenuLabel"
                        VerticalOptions="Start"
                        HorizontalOptions="Start"
                        Margin="10, 0, 10, 0"
                        Font="20"
                        BackgroundColor="Transparent"/>
                    <Label
                        x:Name="OtherLabel"
                        VerticalOptions="Start"
                        HorizontalOptions="Center"
                        Font="Bold, 20"
                        BackgroundColor="Transparent"/>
                    <Label
                        x:Name="OtherMenuLabel"
                        VerticalOptions="Start"
                        HorizontalOptions="Start"
                        Margin="10, 0, 10, 0"
                        Font="20"
                        BackgroundColor="Transparent"/>
                    <Label
                        x:Name="SupperLabel"
                        VerticalOptions="Start"
                        HorizontalOptions="Center"
                        Font="Bold, 20"
                        BackgroundColor="Transparent"/>
                    <Label
                        x:Name="SupperMenuLabel"
                        VerticalOptions="Start"
                        HorizontalOptions="Start"
                        Margin="10, 0, 10, 0"
                        Font="20"
                        BackgroundColor="Transparent"/>
                </StackLayout>
            </ScrollView>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>