<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SouthernCuisine.PreferencesPage"
             Title="ChewSouthern: My Preferences">
    <ContentPage.Resources>
        
    </ContentPage.Resources>
    <ContentPage.Content>
        <StackLayout>
            <StackLayout
                Orientation="Horizontal">
                <Label
                    x:Name="nightSwitchLabel"
                    Text="Night Mode (Experimental)"
                    Font="20"
                    HorizontalOptions="StartAndExpand"
                    BackgroundColor="Transparent"/>
                <Switch
                x:Name="DayNightSwitch"
                    HorizontalOptions="EndAndExpand"
                Toggled="DayNightSwitch_Toggled"/>
            </StackLayout>
            <Label 
                x:Name="AboutLabel"
                Text="App created by Kerstan Thio (coelypuffs) using Xamarin Forms. &#10;Icon designed by Adam van Iderstein"
                TextColor="Gray"
                VerticalOptions="EndAndExpand"
                HorizontalOptions="CenterAndExpand"
                BackgroundColor="Transparent"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>